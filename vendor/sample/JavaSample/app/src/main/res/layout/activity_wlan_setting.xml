<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".WlanSettingActivity">

        <Button
            android:id="@+id/get_wlan_from_printer_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/get_wlan_from_printer"
            android:layout_alignParentTop="true"
            />

        <Button
            android:id="@+id/get_wlan_from_file_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/get_wlan_from_nct_file"
            android:layout_below="@id/get_wlan_from_printer_btn"
            />

        <LinearLayout
            android:id="@+id/wlan_basic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:layout_below="@id/get_wlan_from_file_btn"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wlan_basic_setting"
                android:textStyle="bold"
                />

            <LinearLayout
                android:id="@+id/network_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="@string/network_name"
                    />

                <EditText
                    android:id="@+id/wlan_network_ssid_field"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/wlan_mode_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="@string/wlan_mode"
                    />

                <Button
                    android:id="@+id/wlan_mode_selector"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/wlan_security_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_below="@id/wlan_basic"
            android:orientation="vertical"
            >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wlan_security_setting"

                android:textStyle="bold"
                />

            <LinearLayout
                android:id="@+id/wlan_auth_mode_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="@string/wlan_auth_mode"
                    />

                <Button
                    android:id="@+id/wlan_auth_mode_selector"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/wlan_crypto_mode_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="@string/wlan_crypto_mode"
                    />

                <Button
                    android:id="@+id/wlan_crypto_mode_selector"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/wlan_ip_address_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_below="@id/wlan_security_setting"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wlan_ip_address_setting"
                android:textStyle="bold"
                />

            <LinearLayout
                android:id="@+id/wlan_ip_config_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="@string/wlan_ip_config"
                    />

                <Button
                    android:id="@+id/wlan_ip_config_mode_selector"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/wlan_ip_address_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="@string/wlan_ip_address"
                    />

                <EditText
                    android:id="@+id/wlan_ip_address_field"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/wlan_psk_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="@string/wlan_psk_password"
                    />

                <Button
                    android:id="@+id/wlan_psk_password_field"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/wlan_subnet_mask_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="@string/wlan_subnet_mask"
                    />

                <EditText
                    android:id="@+id/wlan_subnet_mask_field"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/wlan_gateway_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="@string/wlan_gateway"
                    />

                <EditText
                    android:id="@+id/wlan_gateway_field"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/wlan_port_number_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="@string/wlan_port_number"
                    />

                <EditText
                    android:id="@+id/wlan_port_number_field"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/wlan_system_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:layout_below="@id/wlan_ip_address_setting"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wlan_system_setting"
                android:textStyle="bold"
                />

            <LinearLayout
                android:id="@+id/wlan_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="@string/wlan_user_name"
                    />

                <EditText
                    android:id="@+id/wlan_user_name_field"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/wlan_user_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="@string/wlan_user_password"
                    />

                <Button
                    android:id="@+id/wlan_user_password_field"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/wlan_inactivity_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="@string/wlan_inactivity_time"
                    />

                <EditText
                    android:id="@+id/wlan_inactivity_time_field"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:inputType="numberDecimal"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/wlan_system_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="@string/wlan_system_name"
                    />

                <EditText
                    android:id="@+id/wlan_system_name_field"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/wlan_protocol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_below="@id/wlan_system_setting"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wlan_protocol"
                android:textStyle="bold"
                />

            <LinearLayout
                android:id="@+id/wlan_protocol_https"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="@string/wlan_protocol_https"
                    />

                <Switch
                    android:id="@+id/wlan_protocol_https_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:enabled="false"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/wlan_protocol_telnet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="@string/wlan_protocol_telnet"
                    />

                <Switch
                    android:id="@+id/wlan_protocol_telnet_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:enabled="false"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/wlan_protocol_ftp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="@string/wlan_protocol_ftp"
                    />

                <Switch
                    android:id="@+id/wlan_protocol_ftp_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:enabled="false"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/wlan_protocol_SNMP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="@string/wlan_protocol_snmp"
                    />

                <Switch
                    android:id="@+id/wlan_protocol_snmp_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:enabled="false"
                    />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/set_wlan_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/wlan_protocol"
            android:text="@string/set_wlan_info"
            android:layout_marginTop="8dp"
            />

        <LinearLayout
            android:id="@+id/wlan_certificate_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_below="@id/set_wlan_btn"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wlan_certificate_file_upload"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/wlan_pem_type"
                    />
                <Button
                    android:id="@+id/wlan_pem_type_selector"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/certificate_file"
                    />

                <Button
                    android:id="@+id/wlan_certificate_select_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/wlan_certificate_upload_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/certificate_file_upload"
                />

            <Button
                android:id="@+id/wlan_binary_certificate_upload_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/set_binary_certificate_file"
                />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>